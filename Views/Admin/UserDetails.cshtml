@model PlantShop.Models.User
@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="bi bi-person"></i> Chi tiết người dùng</h4>
    <a asp-action="Users" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card admin-card">
    <div class="card-body">
        <table class="table table-borderless">
            <tr>
                <th style="width:200px">ID:</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Tên đăng nhập:</th>
                <td>@Model.Username</td>
            </tr>
            <tr>
                <th>Họ tên:</th>
                <td>@Model.FullName</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Số điện thoại:</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>Địa chỉ:</th>
                <td>@Model.Address</td>
            </tr>
            <tr>
                <th>Quyền:</th>
                <td>
                    @if (Model.IsAdmin)
                    {
                                <span class="badge bg-success">Admin</span>
                    }
                    else
                    {
                                <span class="badge bg-secondary">User</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Ngày tạo:</th>
                <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        </table>
    </div>
</div> 